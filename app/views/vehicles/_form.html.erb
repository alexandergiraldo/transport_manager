<%= form_for(@vehicle, multiple: true) do |f|%>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Placa</label>
    <div class="col-sm-10">
      <%= f.text_field :license_plate, class: "form-control", required: true%>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Lateral</label>
    <div class="col-sm-10">
      <%= f.text_field :side_number, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Modelo</label>
    <div class="col-sm-10">
      <%= f.text_field :model_date, class: "form-control", placeholder: "2018"%>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Clase</label>
    <div class="col-sm-10">
      <%= f.select :vehicle_type, options_for_vehicle_types, {:prompt => 'Seleccionar CategorÃ­a'}, {class: "category-select2 form-control", required: false}%>
    </div>
  </div>
  <%if FeatureFlag.enabled?(:images_storage)%>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Imagen</label>
      <div class="col-sm-10">
        <%= f.file_field :image %>
      </div>
    </div>
    <%if f.object.image.attached?%>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">Borrar Imagen</label>
        <div class="col-sm-10">
          <%= check_box_tag :remove_image %>
        </div>
      </div>
    <%end%>
  <%end%>
  <%= link_to 'Cancelar', :back, class: 'btn btn-light'%>
  <%= f.submit 'Guardar', class: "btn btn-primary"%>
<%end%>