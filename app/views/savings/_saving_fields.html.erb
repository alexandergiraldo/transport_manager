<tr class="saving-row">
  <td class="align-left text-left" scope="row">
    <%= f.text_field :event_date, class: "form-control datepicker", placeholder: "", required: true, autocomplete: "off"%>
  </td>
  <td class="align-left text-left">
    <%= f.text_field :amount, class: "form-control saving-value imask_number", placeholder: '', required: true%>
  </td>
  <td class="align-left text-left" scope="row">
    <%= f.text_area :notes, rows: 1, class: "form-control", placeholder: "", required: false%>
  </td>
  <td class="align-left d-print-none">
    <div class="text-center">
      <%= link_to_remove_association f, wrapper_class: 'saving-row', title: "Eliminar" do%>
        <i class="material-icons md-18 align-middle">delete</i>
      <%end%>
    </div>
  </td>
</tr>
