<div class="col-md-5">
  <%= form_for(:q, url: request.env['PATH_INFO'], method: :get) do |f|%>
    <div class="form-group">
      <div class="row mb-1">
        <div class="col-md-4 mb-1">
          <%= f.select :event_date_gteq, options_for_select(month_options, params.dig(:q, :event_date_gteq).try(:mon)), {include_blank: false}, {class: "form-control auto-submit"}%>
        </div>
        <div class="col-md-4 mb-1">
          <%=select_year(params.dig(:year).try(:to_i) || Date.today, {start_year: 2011, end_year: Time.now.year}, class: "form-control auto-submit", name: 'year')%>
        </div>
      </div>
    </div>
  <%end%>
</div>
