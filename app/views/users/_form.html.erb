<%content_for :external_css do %>
  <%= render_select2_css %>
<%end%>

<%= form_for(@user) do |f|%>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Nombre</label>
      <%= f.text_field :full_name, class: "form-control", required: true%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Email</label>
      <%= f.text_field :email, class: "form-control", placeholder: ""%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Contrase√±a</label>
      <%= f.password_field :password, class: "form-control", placeholder: "", required: @user.new_record? %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Vehiculos</label>
      <%= f.select :vehicle_ids, user_vehicles.map{|v| [v.license_plate, v.id]}, {prompt: 'Seleccione vehiculo(s)'}, multiple: true, class: "form-control category-select2"%>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 text-left">
      <%= f.submit 'Guardar', class: "btn btn-primary"%>
      <%= link_to 'Cancelar', users_path, class: 'btn btn-light'%>
    </div>
  </div>
<%end%>