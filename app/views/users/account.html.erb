<%content_for :external_css do %>
  <%= render_select2_css %>
<%end%>

<div class="card-header">
  <h5 class="card-title">Mi Cuenta</h5>
</div>
<div class="card">
  <div class="card-body">
    <%= form_for(@user, url: update_account_users_path, method: :put) do |f|%>
      <div class="row">
        <div class="col-md-6 mb-3">
        <label for="exampleFormControlInput1">Nombre</label>
          <%= f.text_field :full_name, class: "form-control", required: true%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
        <label for="exampleFormControlInput1">Email</label>
          <%= f.text_field :email, class: "form-control", placeholder: ""%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="exampleFormControlInput1">Contraseña Actual</label>
          <%= f.password_field :current_password, class: "form-control", placeholder: "", required: @user.new_record? %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="exampleFormControlInput1">Nueva Contraseña</label>
          <%= f.password_field :password, class: "form-control", placeholder: "", required: @user.new_record? %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12 text-left">
          <%= f.submit 'Guardar', class: "btn btn-primary"%>
          <%= link_to 'Cancelar', users_path, class: 'btn btn-light'%>
        </div>
      </div>
      <%end%>
  </div>
</div>
