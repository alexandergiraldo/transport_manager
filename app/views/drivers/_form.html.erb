<%= form_for(@driver) do |f|%>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Nombre</label>
        <%= f.text_field :name, class: "form-control", required: true%>
    </div>
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Cedula</label>
      <%= f.text_field :identification_id, class: "form-control"%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 mb-3">
      <label for="exampleFormControlInput1">Dirección</label>
      <%= f.text_field :address, class: "form-control"%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Celular</label>
      <%= f.text_field :mobile_number, class: "form-control"%>
    </div>
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Telefono Fijo</label>
      <%= f.text_field :phone_number, class: "form-control"%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Seguro</label>
      <%= f.text_field :insurance, class: "form-control", placeholder: ""%>
    </div>
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Pension</label>
      <%= f.text_field :pension_company, class: "form-control", placeholder: ""%>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Email</label>
      <%= f.text_field :email, class: "form-control", placeholder: ""%>
    </div>
    <div class="col-md-6 mb-3">
      <label for="exampleFormControlInput1">Cumpleaños</label>
      <%= f.text_field :birthday, class: "form-control datepicker", placeholder: ""%>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <label for="exampleFormControlInput1">Notas</label>
      <%= f.text_area :notes, class: "form-control", placeholder: ""%>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 text-center">
      <%= f.submit 'Guardar', class: "btn btn-primary"%>
      <%= link_to 'Cancelar', :back, class: 'btn btn-light'%>
    </div>
  </div>
<%end%>