<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="newCollaboratorModalLabel">Editar Ahorro</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
    </div>
    <%= form_for(saving, url: driver_saving_path(saving.driver_id, saving.id)) do |f|%>
      <div class="modal-body">
        <div class="form-group">
          <div class="row mb-1">
            <div class="col-md-6 mb-1">
              <%= f.text_field :event_date, class: "form-control datepicker", placeholder: "Fecha", required: true, autocomplete: "off"%>
            </div>
            <div class="col-md-6 mb-1">
              <%= f.text_field :amount, class: "form-control imask_number", placeholder: '', required: true%>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-md-12 mb-1">
              <%= f.select :vehicle_id, options_for_select(user_vehicles.pluck(:license_plate, :id), f.object.vehicle_id), {:prompt => 'Seleccionar Vehiculo'}, {class: "category-select2 form-control", required: false}%>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-12">
              <%= f.text_field :notes, class: "form-control", placeholder: "Notas"%>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    <%end%>
  </div>
</div>