<%content_for :external_css do %>
  <%= render_select2_css %>
<%end%>

<div class="card-header">
  <h5 class="card-title">Nueva planilla de Registro</h5>
</div>
<div class="card">
  <div class="card-body">
    <%= form_for(current_vehicle, url: multiple_registers_path, method: :post) do |f|%>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col" class="text-left" style="width: 14%">Fecha</th>
              <th scope="col" class="text-left" style="width: 12%">Tipo</th>
              <th scope="col" class="text-left" style="width: 25%">Descripci√≥n</th>
              <th scope="col" class="text-left" style="width: 13%">Valor</th>
              <th scope="col" class="text-left">Notas</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="registers" class="">
            <%= f.fields_for :registers, @register_service.try(:registers) || current_vehicle.registers.new do |m| %>
              <%= render partial: 'register_fields', locals: {f: m}%>
            <%end%>
          </tbody>
        </table>

        <div class="row-fluid mb-4">
          <div class="col-sm-12 text-center">
            <%=link_to_add_association 'Agregar Registro', f, :registers, class: "btn btn-success", partial: 'register_fields', "data-association-insertion-node" => '#registers', "data-association-insertion-method"=>"append"%>
          </div>
        </div>

        <div class="row-fluid">
          <div class="col-sm-12 text-center">
            <%= f.submit 'Guardar', class: "btn btn-primary"%>
            <%= link_to 'Cancelar', :back, class: 'btn btn-light'%>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
